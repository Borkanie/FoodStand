<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodStandUI.View.FoodListView"
             xmlns:local="clr-namespace:FoodStandUI.ViewModel.Components">
    <ContentView.BindingContext>
        <local:FoodViewModel/>
    </ContentView.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.RowSpan="2"/>
        <Grid Grid.Row="0">
            <Label Text="{Binding Name}"></Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Text="{Binding Description}" Grid.Column="0"></Label>
            <Label Text="{Binding WheigthPerPortion}" Grid.Column="1"></Label>
        </Grid>
    </Grid>
</ContentView>
