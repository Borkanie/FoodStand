<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodStandUI"
             x:Class="FoodStandUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <RadialGradientBrush x:Key="PurpleRadialGradientBrush"
        Center="0.5,0.5" Radius="0.5">
                <GradientStop Color="#800080" Offset="0.0" />
                <!-- Dark Purple -->
                <GradientStop Color="#D8BFD8" Offset="1.0" />
                <!-- Lighter Purple -->
            </RadialGradientBrush>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
